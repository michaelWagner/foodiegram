<div class="user-profile">
  <h3>
    <% if (user.get('avatar_url')) { %>
      <img class="user-avatar" src="<%= user.escape('avatar_url') %>" alt="">
    <% } %>
    <a href="#/users/<%= user.get('author.username') %>" alt="">
      <span class="foodiegram-username">
        @<%= user.escape('username') %>
      </span>
    </a>
    <span class="user-profile-name">
      <%= user.escape('name') %>
    </span>
    <span class="profile-button">

    </span>
  </h3>
  <p class="user-bio">
    <%= user.escape('description') %>

    <span class="following-stats pull-right">
      <span>
        <span class="following-stats-number">
          <%= user.posts().size() %>
        </span> posts
      </span>
      <span>
        <span class="following-stats-number">
          <%= user.followers().size() %>
        </span> followers
      </span>
      <span>
        <span class="following-stats-number">
          <%= user.followings().size() %>
        </span> following
      </span>
    </span>
  </p>
  <div class="user-profile-thumbnail-grid">
    <div class="col-s-9 col-s-3">
      <% user.posts().each(function(post) { %>
        <a href="#/posts/<%= post.id %>" class="thumbnail profile-item">
          <img src="<%= post.escape('image_url') %>" alt="" />
        </a>
      <% }); %>
    </div>
  </div>
</div>
