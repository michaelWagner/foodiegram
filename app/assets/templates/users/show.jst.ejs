<div class="user-profile">
  <div class="user-header jumbotron">

  </div>
  <h3>
    <% if (user.get('avatar_url')) { %>
      <img class="user-avatar" src="<%= user.escape('avatar_url') %>" alt="">
    <% } %>
    <a href="#/users/<%= user.get('author.username') %>" alt="">
      <span class="foodiegram-username">
        @<%= user.escape('username') %>
      </span>
    </a>
    <span class="user-profile-name">
      <%= user.escape('name') %>
    </span>
    <% if (user.id === CURRENT_USER_ID) { %>
      <button class="btn btn-primary edit-profile-button profile-button"
              type="button" name="edit-profile">
        Edit Profile
      </button>
    <% } else { %>
      <button class="btn btn-primary follow-user-button profile-button"
              type="button" name="follow-user">
        <% if (user.followers().get(CURRENT_USER_ID)) { %>
          Unfollow
        <% } else { %>
          Follow
        <% } %>
      </button>
    <% } %>
  </h3>
  <p class="user-bio">
    <%= user.escape('description') %>

    <span class="following-stats pull-right">
      <span>
        <span class="following-stats-number">
          <%= user.posts().size() %></span> posts
        </span>
      <span><span class="following-stats-number">
        <%= user.followers().size() %></span> followers
      </span>
      <span><span class="following-stats-number">
        <%= user.followings().size() %></span> following
      </span>
    </span>
  </p>
  <div class="user-profile-thumbnail-grid">
    <div class="col-s-9 col-s-3">
      <% user.posts().each(function(post) { %>
        <a href="#/posts/<%= post.id %>" class="thumbnail profile-item">
          <img src="<%= post.escape('image_url') %>" alt="" />
        </a>
      <% }); %>
    </div>
  </div>
</div>
