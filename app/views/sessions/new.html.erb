<div class="splash-page-container">

  <div class="splash-page-form">

    <h1>Sign In</h1>

    <form action="/session" method="post">
      <input type="hidden"
             name="authenticity_token"
             value="<%= form_authenticity_token %>">

      <label>Username
        <input type="text" name="user[username]" value="guest_user"><br>
      </label><br>

      <label>Password
        <input name="user[password]" type="password" value="password"><br>
      </label><br>

      <input type="submit" class="btn btn-primary" value="Submit"><br>

    </form>
  </div>

  <%= link_to "Sign up", new_user_url, class: 'login-option' %>

</div>
