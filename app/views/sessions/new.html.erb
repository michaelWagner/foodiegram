<h1>Sign In</h1>

<form action="/session" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label>Username<br>
    <input type="text" name="user[username]"><br>
  </label><br>

  <label>Password<br>
    <input name="user[password]" type="password"><br>
  </label><br>

  <input type="submit" value="Submit"><br>
</form>
